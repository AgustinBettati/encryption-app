<!DOCTYPE html>
<html>
  <head>
    <title>Encryption App</title>
    <%include partials/refrences%>
  </head>
  <body>
    <%include partials/navBar.ejs%>
    <script type="text/javascript">
    var d = document.getElementById("decrypt");
    d.className += "active";
    </script>

    <h1 class="text-center">Desencriptar informacion</h1>

    <div class="row" style="padding-top: 30px">
      <div class="col-xs-3"></div>
      <div class="col-xs-6">
        <form id="decrypt-form" method="POST" action="/decrypt">
          <div>
          <label for="name">Selecciona el item que desea desencriptar</label>
          <div class="checkboxes">
          <% for( var i = 0; i < data.length; i++) { %>
          <input type="radio" name="name" value="<%= data[i].name %>"> <%= data[i].name %> <br>
          <% } %>
          </div>
          <label for="password">Clave de encriptacion</label>
          <input name="password" type="password">
          </div>
          <div>
          <input type="submit"value="Desencriptar" style="margin-top: 20px" class="btn btn-primary btn-lg">
          </div>
        </form>
      </div>
      <div class="col-xs-3"></div>

    </div>

  </body>
</html>
